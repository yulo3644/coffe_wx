.reqlist{
  padding:10px;
  background-color: #f7f8fa;
}
.shangping{
  display: flex;
  background-color: #fff;
  margin-top: 5px;
  padding: 5px;
  align-items: center;
  justify-content: space-between;
  border-radius: 20px;
  width: 300px;
  height: 80px;
}
.shangping .image{
  width: 80px;
  height: 80px;
  border-top-left-radius: 20px;
  border-bottom-left-radius: 20px;
}
.shangping .name{
  color: #444444;
  margin-left: 10px;
  margin-top: 55px;
  width: 150px;
  height: 100%;
}
.shangping .enname{
  width: 90px;
  margin-left: -40px;
  color: #999999;
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.shangping .price{
  color: tomato;
  font-weight: bold;
}