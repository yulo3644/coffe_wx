/* pages/components/home-list/home-list.wxss */
.reqlist{
  padding: 0 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.shangping{
  width: 42%;
  background-color: lightblue;
  margin-top: 10px;
  padding: 8px;
  border-radius: 10px;
  position: relative;
}
.shangping .image{
  width: 100%;
  height: 120px;
  border-radius: 10px;
}
.shangping .name
{
  color: #999999;
  margin-top: 10px;
}
.shangping .ename
{
  margin-top: 5px;
  color: #777777;
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.shangping .price
{
  color:tomato;
  margin-top: 5px;
  font-weight: bolder;
}
.shangping .remai
{
  color: #ffffff;
  background-color: #e4393c;
  width: 35px;
  font-size: 13px;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
  position: absolute;
  right: 10px;
  text-align: center;
}
